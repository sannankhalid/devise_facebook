<section id="deviseauth">

  <h2>Sign in with facebook account -- OR -- use an authentication service</h2>

  <div id="local" class="box">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <p><%= f.label :email %><br/>
          <%= f.text_field :email %></p>

        <p><%= f.label :password %><br/>
          <%= f.password_field :password %></p>

        <% if devise_mapping.rememberable? %>
            <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
        <% end %>

        <p><%= f.submit "Sign in" %></p>
    <% end %>
  </div>

  <div id="remote">
    <div id="services" class="box">
      <a href="/auth/facebook" class="services"><%= image_tag "facebook_64.png", :size => "194x25", :alt => "Facebook" %>        </a>
    </div>
  </div>

  <div id="devise_links">
    <%= render :partial => "devise/shared/links" %>
  </div>
</section>