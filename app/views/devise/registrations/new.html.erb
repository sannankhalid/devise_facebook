<section id="deviseauth">
  <h2>Sign up</h2>

  <h2>Sign in with facebook account -- OR -- use an authentication service</h2>

  <div id="local2" class="box">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <p><%= f.label :email %><br/>
          <%= f.text_field :email %></p>

        <p><%= f.label :password %><br/>
          <%= f.password_field :password %></p>

        <p><%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation %></p>

        <p><%= recaptcha_tags %></p>

        <p><%= f.submit "Sign up" %></p>
    <% end %>
  </div>

  <div id="remote2">
    <div id="services" class="box">
      <a href="/auth/facebook" class="services2"><%= image_tag "facebook_64.png", :size => "64x64", :alt => "Facebook" %></a>
    </div>
  </div>

  <div id="devise_links">
    <%= render :partial => "devise/shared/links" %>
  </div>
</section>

